{
  "name": "Kihlgrens WordPress",
  "dockerComposeFile": "docker-compose.yml",
  "service": "wordpress",
  "workspaceFolder": "/workspace",
  "forwardPorts": [8080],
  "waitFor": "onCreateCommand",
  "onCreateCommand": "cd /workspace && npm install",
  "postStartCommand": "echo 'WordPress running on http://localhost:8080'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "bmewburn.vscode-intelephense-client",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
